<assembly>
	<id>bin</id>
	<formats>
		<format>tgz</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.scriptSourceDirectory}</directory>
			<outputDirectory>/python</outputDirectory>
			<includes>
				<include>*.py</include>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>data</directory>
			<outputDirectory>/lib/data</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>conf</directory>
			<outputDirectory>/lib/conf</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
